<div class="container">
<h3>Cambiar Contrase単a</h3>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Nueva contrase単a" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> minimo de caracteres)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar nueva contrase単a" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Cambiar contrase単a", class: :"btn btn-primary btn-sm" %>
  </div>
<% end %>
</div>